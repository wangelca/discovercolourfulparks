generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  clerk_user_id String   @unique
  username      String?
  email         String   @unique
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt
  password      String

  @@map("users")
}

model Park {
  parkId      Int     @id @default(autoincrement()) // Primary key, non-nullable
  name        String  @db.VarChar(200)             // Non-nullable string, VARCHAR(200)
  description String? @db.VarChar(1000)            // Optional string, VARCHAR(1000)
  location    String  @db.VarChar(300)             // Non-nullable string, VARCHAR(300)

  @@map("park")  // Maps the model to the "park" table
}
